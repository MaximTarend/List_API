<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/character">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_character"
        app:title="@string/character_toolbar_title"
        style="@style/Widget.MaterialComponents.Toolbar.PrimarySurface"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:adjustViewBounds="true"
        android:padding="@dimen/character_image_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="@dimen/character_text_size"
        tools:text="name"
        android:gravity="center_horizontal"
        android:padding="@dimen/character_text_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/species"
        android:textSize="@dimen/character_text_size"
        tools:text="species"
        android:padding="@dimen/character_text_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/status"
        android:textSize="@dimen/character_text_size"
        tools:text="status"
        android:padding="@dimen/character_text_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender"
        android:textSize="@dimen/character_text_size"
        tools:text="gender"
        android:padding="@dimen/character_text_padding"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/hair"
        android:textSize="@dimen/character_text_size"
        tools:text="hair"
        android:padding="@dimen/character_text_padding"/>



</LinearLayout>