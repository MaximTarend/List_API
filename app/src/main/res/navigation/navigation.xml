<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation.xml"
    app:startDestination="@id/list">

    <fragment
        android:id="@+id/list"
        android:name="by.hometrainng.listapi.fragments.ListFragment"
        tools:layout="@layout/fragment_list">

        <action
            android:id="@+id/to_character"
            app:destination="@+id/character"/>

    </fragment>

    <fragment
        android:id="@+id/character"
        android:name="by.hometrainng.listapi.fragments.CharacterFragment"
        tools:layout="@layout/fragment_character">

        <argument
            android:name="character_id"
            app:argType="integer"/>

    </fragment>

</navigation>